@model ChoiceViewModel

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@foreach (var item in Model.LectureswithDepartment)
{
    @item.DepartmentName
    <div class="tables">
        <div class="bs-example widget-shadow" data-example-id="hoverable-table">
            <h4>Ders Listesi</h4>
            <table class="table table-hover">

                <thead>
                    <tr>
                        <th>#</th>
                        <th>Ders Adı</th>
                        <th>Ders Kodu</th>
                        <th>Kredi</th>
                        <th>Onay Durumu</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var lecture in item.Lectures)
                    {
                        <tr>
                            <th scope="row">@lecture.Id</th>
                            <td>@lecture.Name</td>
                            <td>@lecture.Code</td>
                            <td>@lecture.Credit</td>
                            <td></td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
}




