@model ExamViewModel

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="widget-shadow " data-example-id="basic-forms">
    <div class="form-title">
        <h4>Sınav Sonucu Düzenle</h4>
    </div>
    <div class="form-body">
        <form class="form-horizontal" asp-controller="Exam" asp-action="Update">
            <input type="hidden" name="ExamId" value="@Model.ExamId" />
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Vize Notu:</label>
                <div class="col-sm-9">
                    <input asp-for="Midterm" value="@Model.Midterm" type="number" class="form-control" placeholder="Vize Notu" name="Midterm">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Final Notu:</label>
                <div class="col-sm-9">
                    <input asp-for="Final" value="@Model.Final" type="text" class="form-control" placeholder="Final Notu" name="Final">
                </div>
            </div>
            <div class="form-group">
                <label for="selector1" class="col-sm-2 control-label">Ders</label>
                <div class="col-sm-9">
                    <select asp-for="LectureId" class="form-control1">
                        @foreach (var lecture in Model.Lectures)
                        {
                            <option value="@lecture.Id">@lecture.Name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="col-sm-offset-2"> <button type="submit" class="btn btn-default">Düzenle</button> </div>
        </form>
    </div>
</div>

