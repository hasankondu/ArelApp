@model RoleViewModel

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tables">
    <div class="bs-example widget-shadow" data-example-id="hoverable-table">
        <h4>Rol Listesi</h4>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rol Adı</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.Roles)
                {
                <tr>
                    <th scope="row">@role.Id</th>
                    <td>@role.Name</td>
                    <td>

                        <a class="btn btn-warning btn-flat btn-pri" href="/Role/Update/@role.Id"><i class="fa fa-plus" aria-hidden="true"></i>Düzenle</a>
                        @*</form>*@

                    </td>
                    <td>
                        <form action="/Role/Delete" method="post">
                            <input type="hidden" name="RoleId" value="@role.Id" />
                            <button type="submit" class="btn btn-danger btn-flat btn-pri"><i class="fa fa-plus" aria-hidden="true"></i>Kaldır</button>

                        </form>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

