@model RoleViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="widget-shadow " data-example-id="basic-forms">
    <div class="form-title">
        <h4>Role Düzenle</h4>
    </div>
    <div class="form-body">
        <form class="form-horizontal" asp-controller="Role" asp-action="Update" method="post">
            <input type="hidden" name="RoleId" value="@Model.RoleId" />
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Role Adı:</label>
                <div class="col-sm-9">
                    <input asp-for="Name" value="@Model.Name" type="text" class="form-control" placeholder="Role Adı" name="Name">
                </div>
            </div>
            <div class="col-sm-offset-2"> <button type="submit" class="btn btn-default">Düzenle</button> </div>
        </form>
    </div>
</div>
