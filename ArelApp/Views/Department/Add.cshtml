
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="widget-shadow " data-example-id="basic-forms">
    <div class="form-title">
        <h4>Bölüm Ekle</h4>
    </div>
    <div class="form-body">
        <form class="form-horizontal" asp-controller="Department" asp-action="Add">
            <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Bölüm Adı:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" placeholder="Bölüm Adı" name="Name">
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Bölüm Kodu:</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" placeholder="Bölüm Kodu" name="Code">
                </div>
            </div>
            <div class="col-sm-offset-2"> <button type="submit" class="btn btn-default">Ekle</button> </div>
        </form>
    </div>
</div>
